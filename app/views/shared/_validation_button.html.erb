<% if current_user && current_user.mayor && mesure.status == "En cours de concertation"%>
  <div class="gap-2 boutons">
    <%= link_to "Valider", mesure_path(mesure, m: "Validé"), class:"btn btn-primary btn-validation small-bouton",data: { turbo_method: :patch, turbo_confirm: "Etes vous sûr de vouloir changer le statut de cette mesure ?" } %>
    <%= link_to "Refuser", mesure_path(mesure, m:"Refusé"), class:"btn btn-danger btn-validation small-bouton",data: { turbo_method: :patch, turbo_confirm: "Etes vous sûr de vouloir changer le statut de cette mesure ?" } %>
  </div>
<% else %>
  <div class="gap-1 boutons">
    <i class="fa-solid fa-share-nodes"></i><p class="me-1">Share</p>
    <i class="fa-solid fa-plus"></i><p>Follow</p>
  </div>
<% end %>
