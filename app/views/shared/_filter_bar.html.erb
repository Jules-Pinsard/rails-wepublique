<div data-controller="filter-controller"></div>
<div class="item d-flex">
  <%= simple_form_for Mesure.new, url: mesures_path, method: :get do |f| %>
  <div class="d-flex align-items-center gap-2 row-gap-0 ">
  <p>Filter par :</p>
    <%= f.association :category, label: false, include_blank: "Catégorie", selected: params.dig(:mesure,:category_id) %>
    <%= f.input :status, as: :select, collection: ["En cours de concertation","Refusé","Validé"],label: false, include_blank: "Statut", selected: params.dig(:mesure,:status)%>
    <%= f.input :mayor, as: :boolean ,label: 'mesures du maire',legend: false,selected: params.dig(:mesure,:user_id), class: "m-0", input_html: { checked: (params.dig(:mesure,:mayor) == "1") } %>
  </div>
</div>
<div class="item align-items-center justify-content-end gap-2">
  <p>Trier par :</p>
    <%= f.input :sort_by, as: :select, collection: ["Nombre de soutien","Date de création","Statut"],label: false,selected: (params.dig(:mesure,:title) || "Date de création") %>
    <%= f.input :order, as: :select, collection: ["Croissant","Décroissant"], label: false,selected: (params.dig(:mesure,:content) || "Décroissant") %>
    <%= f.button :submit, class: "d-none"  %>
</div>
  <% end %>
