<div class="blue-box mt-3">
  <div class="d-flex justify-content-between">
    <h4><%= @mesure.title %></h4>
    <div class=" d-flex">
      <div class="ms-4 thumbs d-flex align-items-center justify-content-center">
        <%= render partial: "mesures/mesure_upvote_link", locals: {mesure: @mesure } %>
      </div>
    </div>
  </div>
  <div class="div_status ms-5">
    <p class="mt-4 pe-5"><i class="fa-solid fa-list fa-xl"></i> <%= @mesure.category.name %> </p>
    <p class="mt-4">
      <% if @mesure.status == "En cours de concertation" %>
        <i class="fa-regular fa-comment-dots text-primary"></i>
      <% elsif @mesure.status == "Refusé" %>
        <i class="fa-solid fa-xmark text-danger"></i>
      <% elsif @mesure.status == "Validé" %>
        <i class="fa-regular fa-square-check text-success"></i>
      <% end %>
      <%= @mesure.status %> </p>
  </div>
  <div class="d-flex">
    <p class="text-wrap ms-1 ps-2 fs-6 description-mesure mt-3" style="width: 70%;"> <%= @mesure.content %></p>
    <div class="col-8 mt-3 mb-3 ms-5 d-flex content-center" style="width: 30%;">
      <%= render partial: "shared/validation_button", locals: { mesure: @mesure } %>
    </div>
  </div>
</div>
