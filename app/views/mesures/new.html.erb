<div data-controller="new-mesure">
  <%= simple_form_for @mesure do |f| %>
    <div class="row gy-4 mx-2 mt-3">
      <h2 class='text-center m-1 blue-text'> Proposer une nouvelle <strong>mesure</strong></h2>
      <%= f.input :title, class: "flex-grow-1", label: false, placeholder: "Entrez le titre de votre mesure" %>
      <div class="col-4 m-0">
        <%= f.association :category, input_html: { 'data-action': "input->new-mesure#show", 'data-new-mesure-target': 'input' }, label: false, include_blank: "Choisissez une catégorie"%>
        <%= f.input :content, label: false, placeholder: "Décrivez votre mesure", input_html: { style: 'height: 300px;' } %>
        <%= f.button :submit, "Poster l'observation", class: "btn btn-primary" %>
      </div>
      <div class="col-8 mt-0">
      <div class="blue-box flex-grow-1 h-100">
          <h3 class="p-1">Les mesures déjà proposées pour cette catégorie</h3>
        <div data-new-mesure-target= "container">
        <p class="fst-italic text-center mt-3"> Choisissez une catégorie pour afficher les mesures </p>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>
