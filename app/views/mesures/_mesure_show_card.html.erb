<div class="white-box mt-3">
  <div class="titre m-2 mb-3">
    <h4><%= @mesure.title %></h4>
  </div>
  <div class="d-flex justify-content-center">
    <div class="line-1"></div>
  </div>
  <div class="like d-flex">
    <div class="user">
      <p>Proposé par <%= @mesure.user.first_name %> <%= @mesure.user.last_name %> </p>
    </div>
    <%= render partial: "mesures/mesure_upvote_link", locals: {mesure: @mesure } %>
  </div>
  <div class="category-status d-flex">
    <div class="mid-item">
      <i class="fa-solid fa-list fa-xl"></i> <%= @mesure.category.name %>
    </div>
    <div class="mid-item">
      <% if @mesure.status == "En cours de concertation" %>
        <i class="fa-regular fa-comment-dots text-primary"></i>
      <% elsif @mesure.status == "Refusé" %>
        <i class="fa-solid fa-xmark text-danger"></i>
      <% elsif @mesure.status == "Validé" %>
        <i class="fa-regular fa-square-check text-success"></i>
      <% end %>
      <%= @mesure.status %>
    </div>
  </div>
  <div class="description">
    <%= @mesure.content %>
  </div>
  <%= render partial: "shared/validation_button", locals: { mesure: @mesure } %>
</div>
